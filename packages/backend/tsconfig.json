{
  "compilerOptions": {
    "incremental": false, /* (default: true) Save .tsbuildinfo files to allow for incremental compilation of projects. */
    "target": "es6", /* Set the JavaScript language version for emitted JavaScript and include compatible library declarations. */
    "module": "CommonJS", /* Specify what module code is generated. */
    "strict": true, /* Enable all strict type-checking options. */
    "declaration": true, /* (default: false) Generate .d.ts files from TypeScript and JavaScript files in your project. */
    "outDir": "./dist", /* Specify an output folder for all emitted files. */
    "esModuleInterop": true /* Emit additional JavaScript to ease support for importing CommonJS modules. This enables 'allowSyntheticDefaultImports' for type compatibility. */
  },
  /* files to include when compiling */
  "include": [
    "src/**/*"
  ],
  /* files to exclude when compiling */
  "exclude": [
    "node_modules",
    "src/**/*.test.ts" /* exclude test files */
  ]
}
